<%= form_for(@picture) do |f| %>
  <%= f.error_messages! %>

  <%= f.hidden_field :title %>
  <%= f.hidden_field :content %>
  <%= f.text_field :title, class: 'form-control', placeholder: 'タイトル' %>
  <br>
  <%= f.text_field :content, class: 'form-control', placeholder: '本文' %>
  <br>
  <%= f.file_field :image %>
  <%= f.hidden_field :image_cache %>
  <br>
  <%= f.submit '写真投稿', class: 'btn btn-primary btn-block' %>
<% end %>
<br>
<%= link_to "写真投稿一覧に戻る", pictures_path, class: 'btn btn-default btn-block' %>
