<div class="container">
  <div class="wrapper col-md-8 col-md-offset-2 col-sm-10">
    <p><%= notice %></p>

    <h1>写真投稿一覧</h1>

    <%= link_to "写真を投稿する", new_picture_path, class: 'btn btn-default' %>
    <% @pictures.each do |picture| %>
    <div class="row">
      <h4><strong><%= picture.title %></strong></p>
      <p><%= picture.content %></p>
      <%= link_to "写真投稿を編集する", edit_picture_path(picture.id), class: 'btn btn-default btn-sm btn-success' %>
      <%= link_to "写真投稿を削除する", picture_path(picture.id), data: {confirm: '本当に削除していいですか？'}, method: :delete, class: 'btn btn-default btn-sm btn-danger' %>
    </div>
    <% end %>
  </div>
</div>
