<div class="contaier">
  <div class="wrapper col-md-4 col-md-offset-4 col-sm-10">
    <h2><%= resource_name.to_s.humanize %>編集</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= f.error_messages! %>

      <div class="field">
        <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "メールアドレス" %>
      </div>

      <div class="field">
        <%= f.text_field :name, class: "form_control", class: "form-control", placeholder: "名前" %>
      </div>

      <% if @user.provider.blank? %>

        <div class="field">
          <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "パスワード" %>
        </div>

        <div class="field">
          <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "パスワード（確認用）" %>
        </div>

        <div class="field">
          <%= f.password_field :current_password, autocomplete: "off", class: "form-control", placeholder: "現在のパスワード" %>
        </div>

      <% end %>

      <div class="actions">
        <%= f.submit "更新", class: "btn btn-primary btn-block" %>
      </div>
    <% end %>

    <p>Unhappy? <%= button_to "更新をキャンセルする", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

    <%= link_to "もどる", :back %>
  </div>
</div>
